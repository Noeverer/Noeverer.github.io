{
  "version": "1.0.0",
  "environment": "internal",
  "deployment": {
    "mode": "standalone",
    "data_directory": "/opt/mcp/data",
    "log_directory": "/opt/mcp/logs",
    "config_directory": "/opt/mcp/config"
  },
  "network": {
    "host": "0.0.0.0",
    "port": 8080,
    "ssl": {
      "enabled": false,
      "cert_file": "",
      "key_file": ""
    },
    "allowed_ips": ["*"],
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 100
    }
  },
  "security": {
    "authentication": {
      "method": "token",
      "secret_key": "${MCP_SECRET_KEY}",
      "token_expiry": "24h"
    },
    "authorization": {
      "default_role": "user",
      "roles": {
        "admin": {
          "permissions": ["*"]
        },
        "user": {
          "permissions": ["read", "write", "execute"]
        },
        "guest": {
          "permissions": ["read"]
        }
      }
    },
    "resource_access": {
      "allowed_directories": [
        "/opt/mcp/data",
        "/tmp/mcp"
      ],
      "blocked_patterns": [
        "/etc",
        "/usr/bin",
        "/bin"
      ]
    }
  },
  "storage": {
    "type": "local",
    "path": "/opt/mcp/data",
    "max_storage_size": "10GB",
    "backup": {
      "enabled": true,
      "schedule": "0 2 * * *",
      "retention_days": 30
    }
  },
  "database": {
    "type": "sqlite",
    "path": "/opt/mcp/data/mcp.db",
    "pool_size": 10,
    "connection_timeout": 30
  },
  "cache": {
    "type": "redis",
    "host": "localhost",
    "port": 6379,
    "database": 0,
    "ttl": 3600,
    "max_size": "1GB"
  },
  "logging": {
    "level": "info",
    "format": "json",
    "rotation": {
      "max_size": "100MB",
      "max_files": 10
    },
    "outputs": ["console", "file"]
  },
  "monitoring": {
    "enabled": true,
    "metrics_port": 9090,
    "health_check": {
      "endpoint": "/health",
      "interval": 30
    }
  },
  "skills": {
    "auto_discovery": true,
    "directory": "/opt/mcp/skills",
    "timeout": 30,
    "max_concurrent": 5
  },
  "memory": {
    "type": "vector",
    "embedding_model": "local",
    "vector_db": "chroma",
    "path": "/opt/mcp/data/vectors"
  },
  "features": {
    "file_operations": true,
    "web_search": false,
    "api_integrations": true,
    "code_execution": true,
    "sandbox": {
      "enabled": true,
      "timeout": 30,
      "memory_limit": "512MB"
    }
  }
}